<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.expressway.mapper.EmeEventResourceMapper">

    <!-- 批量插入应急事件资源关联 -->
    <insert id="batchInsert" parameterType="java.util.List">
        INSERT INTO biz_emergency_event_resource (event_id, resource_id, create_time)
        VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.eventId}, #{item.resourceId}, NOW())
        </foreach>
    </insert>

    <!-- 根据事件ID删除关联 -->
    <delete id="deleteByEventId" parameterType="java.lang.Long">
        DELETE FROM biz_emergency_event_resource WHERE event_id = #{eventId}
    </delete>

    <!-- 根据事件ID查询关联列表 -->
    <select id="selectByEventId" parameterType="java.lang.Long" resultType="com.expressway.entity.EmeEventResource">
        SELECT * FROM biz_emergency_event_resource WHERE event_id = #{eventId}
    </select>
</mapper>
