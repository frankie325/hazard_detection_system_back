<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.expressway.mapper.SysUserMapper">
    <!-- 根据用户名查询用户（关联部门和角色） -->
    <select id="selectByUsername" resultType="com.expressway.entity.SysUser">
        SELECT
            u.*, d.dept_name, r.role_name
        FROM
            sys_user u
                LEFT JOIN
            sys_dept d ON u.dept_id = d.id
                LEFT JOIN
            sys_role r ON u.role_id = r.id
        WHERE
            u.username = #{username}
    </select>

    <!-- 根据ID查询用户 -->
    <select id="selectById" resultType="com.expressway.entity.SysUser">
        SELECT * FROM sys_user WHERE id = #{id}
    </select>
</mapper>
