<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.expressway.mapper.SysRoleMapper">
    <!-- 查询总数 -->
    <select id="count" resultType="Long">
        select count(*) from sys_role
    </select>

    <!-- 查询角色列表 -->
    <select id="selectAllRole" parameterType="com.expressway.dto.RoleQueryParamsDTO"
            resultType="com.expressway.vo.RoleVO">
        SELECT sys_role.*, sys_dept.dept_name FROM sys_role left join sys_dept on sys_role.dept_id = sys_dept.id
        <where>
            <if test="roleName != null and roleName != ''">
                AND role_name LIKE CONCAT('%', #{roleName}, '%')
            </if>
            <if test="deptName != null and deptName != ''">
                AND dept_name LIKE CONCAT('%', #{deptName}, '%')
            </if>
        </where>
    </select>

    <!-- 新增角色 -->
    <insert id="insert" parameterType="com.expressway.entity.SysRole">
        INSERT INTO sys_role (role_name, dept_id, remark, create_time, update_time)
        VALUES (#{roleName}, #{deptId}, #{remark}, NOW(), NOW())
    </insert>

    <!-- 更新角色 -->
    <update id="update" parameterType="com.expressway.dto.RoleUpdateDTO">
        UPDATE sys_role
        <set>
            <if test="roleName != null and roleName != ''">role_name = #{roleName},</if>
            <if test="deptId != null">dept_id = #{deptId},</if>
            <if test="remark != null">remark = #{remark},</if>
            update_time = NOW()
        </set>
        WHERE id = #{id}
    </update>

    <!-- 删除角色 -->
    <delete id="delete" parameterType="java.lang.Long">
        DELETE FROM sys_role WHERE id = #{id}
    </delete>

    <!-- 批量删除角色 -->
    <delete id="batchDelete" parameterType="java.util.List">
        DELETE FROM sys_role WHERE id IN
        <foreach collection="list" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>